# Database Configuration
DATABASE_URL=postgresql://adminory:adminory_dev_password@localhost:5432/adminory

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Backend Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
# Must be at least 32 characters
JWT_SECRET=your-super-secret-jwt-key-change-me-minimum-32-characters-long
JWT_REFRESH_SECRET=your-refresh-secret-key-change-me-minimum-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (CHANGE IN PRODUCTION! - Must be exactly 32 characters)
# Used for encrypting SSO credentials and other sensitive data
ENCRYPTION_KEY=change-me-32-char-encryption-key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Email Configuration (Optional - for invites and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@adminory.dev
SMTP_TLS=true
SMTP_SSL=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# SSO Configuration
SSO_ENABLED=true
# Base URL for SSO callbacks (must match your domain)
SSO_BASE_URL=http://localhost:8000

# MCP Configuration
MCP_ENABLED=true
MCP_INTERNAL_ENABLED=true
MCP_EXTERNAL_ENABLED=true

# Plugin Configuration
PLUGINS_DIR=./plugins
PLUGINS_ENABLED=true
PLUGIN_AUTO_RELOAD=true

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-for-general-encryption-min-32-chars
ALLOWED_HOSTS=localhost,127.0.0.1

# Feature Flags
FEATURE_SSO_SAML=true
FEATURE_SSO_OAUTH=true
FEATURE_PLUGINS=true
FEATURE_MCP=true
